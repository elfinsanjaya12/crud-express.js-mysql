<!DOCTYPE html>
<html>
  <head>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h4><%= user.username %></h4>
    <h1>Data Siswa</h1>
    <a href="/siswas/create">Tambah</a>
    <a href="/users/logout">Logout</a>
    <table bolder="1px">
        <thead>
            <th>Nama</th>
            <th>Alamat</th>
            <th>Kelas</th>
            <th>Aksi</th>
        </thead>
        <tbody>
            <% for(let i = 0; i < siswas.length; i++) { %>
                <tr>
                    <td><%= siswas[i].nama %></td>
                    <td><%= siswas[i].alamat %></td>
                    <td><%= siswas[i].kelas %></td>
                    <td>
                        <a href="/siswas/delete/<%= siswas[i].id %>">Hapus</a>
                        <a href="/siswas/edit/<%= siswas[i].id %>">Edit</a>
                    </td>
                </tr>
            <% } %>
        </tbody>
    </table>
  </body>
</html>
